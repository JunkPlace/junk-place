.container.main

  acme-navbar(creation-date='vm.creationDate')

  .jumbotron.text-center
    h1 Welcome to the Junk&nbsp;Place!

    p.lead
      //img(src='assets/images/yeoman.png', alt="I'm Yeoman")
      //br
      span A spot for worthless talks


  form(ng-submit='vm.onSubmit()' name='messageForm')

    input#message.form-control(
    autocomplete="off"
    type="text"
    placeholder="Message text"
    ng-model='vm.messageText'
    required
    autofocus
    min-length='1'
    )

    button.btn.btn-primary(type="submit" ng-disabled='messageForm.$invalid') Send

  .messages
    .message(
    ng-repeat='message in vm.messages | limitTo:10 track by message.id'
    ng-class='{own: message.from === "me" }'
    )
      .from {{ message.from }} at {{ message.date | amDateFormat:'HH:mm:ss' }}
      .text {{ message.text }}
